<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="256dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:gravity="center_horizontal"
    android:background="@drawable/bg_dialog"
    android:padding="10dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <ImageView
            android:layout_width="100dp"
            android:layout_height="41.5dp"
            android:background="@drawable/logo_biyue"
            android:layout_gravity="center_horizontal"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="32.5dp"
        android:background="@drawable/bg_layout_ingray"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/spacing_smallest"
        android:paddingRight="@dimen/spacing_smallest"
        android:layout_marginTop="@dimen/spacing_bigger"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:background="@drawable/icon_log"
            android:layout_marginRight="@dimen/spacing_smaller"/>

        <EditText
            android:id="@+id/edit_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_edit_trans"
            android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:hint="@string/text_pwd"
            android:inputType="textPassword"
            android:lines="1"
            android:textColor="@color/text_black"
            android:textColorHint="@color/text_gary"
            android:textSize="@dimen/font_small" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="32.5dp"
        android:background="@drawable/bg_layout_ingray"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/spacing_smallest"
        android:paddingRight="@dimen/spacing_smallest"
        android:layout_marginTop="@dimen/spacing_smaller"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:background="@drawable/icon_log"
            android:layout_marginRight="@dimen/spacing_smaller"/>

        <EditText
            android:id="@+id/edit_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/font_small"
            android:textColor="@color/text_black"
            android:hint="@string/text_confirm_pwd"
            android:inputType="textPassword"
            android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:textColorHint="@color/text_gary"
            android:background="@drawable/bg_edit_trans"
            android:lines="1"
            android:focusable="true"
            android:focusableInTouchMode="true"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/btn_finish"
        android:layout_width="match_parent"
        android:layout_height="32.5dp"
        android:gravity="center"
        android:background="@drawable/bg_btn_maincolor"
        android:text="@string/text_finish"
        android:textColor="@color/white"
        android:textSize="@dimen/font_large"
        android:layout_marginTop="@dimen/spacing_smaller"
        />

    <TextView
        android:id="@+id/btn_return"
        android:layout_width="match_parent"
        android:layout_height="32.5dp"
        android:gravity="center"
        android:background="@drawable/bg_btn_white"
        android:text="@string/return_text"
        android:textColor="@color/main_color"
        android:textSize="@dimen/font_large"
        android:layout_marginTop="@dimen/spacing_smaller"
        android:layout_marginBottom="10dp"
        />

</LinearLayout>
