<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/layout_charge"
        android:layout_width="40dp"
        android:layout_height="45dp"
        android:orientation="vertical"
        android:background="@drawable/bg_popup_left"
        android:gravity="center">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/icon_person"
            android:layout_marginBottom="@dimen/spacing_tinier"
            android:layout_marginTop="@dimen/spacing_tinier"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_separate"
            android:textColor="@color/white"
            android:text="@string/text_charge"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/layout_switch"
        android:layout_width="40dp"
        android:layout_height="45dp"
        android:background="@color/trans_main"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/icon_person"
            android:layout_marginBottom="@dimen/spacing_tinier"
            android:layout_marginTop="@dimen/spacing_tinier"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_separate"
            android:textColor="@color/white"
            android:text="@string/text_charge"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/layout_back"
        android:layout_width="40dp"
        android:layout_height="45dp"
        android:background="@drawable/bg_popup_right"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/icon_person"
            android:layout_marginBottom="@dimen/spacing_tinier"
            android:layout_marginTop="@dimen/spacing_tinier"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_separate"
            android:textColor="@color/white"
            android:text="@string/text_charge"/>

    </LinearLayout>

</LinearLayout>
